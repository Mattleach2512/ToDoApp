



@model IEnumerable<ToDoApp.Models.ToDoItemVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="tbldata" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DueDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DueDate)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                    <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.Id"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
                    <a asp-action="Delete" class="btn btn-warning" asp-route-id="@item.Id"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
<script>
    $(document).ready(function () {
        $('#tbldata').DataTable();
    });
</script>
    
}